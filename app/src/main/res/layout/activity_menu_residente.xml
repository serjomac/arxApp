<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a1a">




    <GridLayout
        android:layout_width="450dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="120dp"
        android:columnCount="2"
        android:rowCount="2">

        <ImageView
            android:id="@+id/imgPagoAlicuota"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/pagos" />

        <ImageView
            android:id="@+id/imgListaInvitados"
            android:layout_width="65dp"
            android:layout_marginLeft="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/lista" />


        <ImageView
            android:id="@+id/imgReservacionClub"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/club" />

        <ImageView
            android:id="@+id/imgNotificaciones"
            android:layout_width="60dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/notificaciones" />

    </GridLayout>

</RelativeLayout>